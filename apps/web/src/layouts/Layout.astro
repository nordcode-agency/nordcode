---
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import MainHead from '../components/MainHead.astro';

export interface Props {
    title: string;
    description: string;
    structuredData?: Record<string, unknown>[];
    canonical?: string;
    ogImage?: string;
    noIndex?: boolean;
}

const { title, description, canonical, noIndex, structuredData, ogImage } = Astro.props;
---

<html lang="de" dir="ltr">
    <MainHead
        title={title}
        description={description}
        canonical={canonical}
        noIndex={noIndex}
        structuredData={structuredData}
        ogImage={ogImage}
    />
    <body>
        <Header />
        <main id="inhalt-start">
            <slot />
        </main>
        <Footer />
    </body>
</html>
